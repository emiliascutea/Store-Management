      <Label fx:id="label3" layoutX="46.0" layoutY="249.0" text="The order will cost:" textFill="WHITE" visible="false" />
      <Label fx:id="label4" layoutX="44.0" layoutY="297.0" text="Enter the ID of the client placing the order:" textFill="WHITE" visible="false" />
